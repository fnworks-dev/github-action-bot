# =============================================================================
# Required Configuration
# =============================================================================

# Turso Database
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx

# AI Scoring (at least one required)
GEMINI_API_KEY=your-gemini-api-key
GLM_API_KEY=your-glm-api-key

# =============================================================================
# Twitter/X Configuration
# =============================================================================

# Source selection: 'api' (TwitterAPI.io) or 'diy' (local scraper)
TWITTER_SOURCE=diy

# --- For DIY Scraper (TWITTER_SOURCE=diy) ---
# Path to cookies JSON file
TWITTER_COOKIES_PATH=./cookies/twitter_session.json

# Enable/disable Twitter DIY scraper
TWITTER_ENABLED=true

# Search window (hours)
TWITTER_SEARCH_HOURS=24

# Max results per query
TWITTER_MAX_RESULTS=20

# --- For API Source (TWITTER_SOURCE=api) ---
# TwitterAPI.io key (paid service)
TWITTERAPI_KEY=your-twitterapi-key

# =============================================================================
# IndieHackers & ProductHunt Configuration
# =============================================================================

# ProductHunt API Token (get at https://www.producthunt.com/v2/oauth/applications)
# Note: IndieHackers doesn't require API token (public GraphQL)
PRODUCTHUNT_API_TOKEN=your-producthunt-api-token

# =============================================================================
# Optional Configuration
# =============================================================================

# Minimum score threshold for Discord notifications (1-10)
MIN_SCORE_THRESHOLD=6

# Which sources to run (comma-separated: reddit,hackernews,twitter,indiehackers,producthunt)
SOURCES=reddit,hackernews,twitter,indiehackers,producthunt
